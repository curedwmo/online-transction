<!--pages/publish/publish.wxml-->
<view class="container">
  <view>
    <image class= "show-image" mode="aspectFitf" src="{{src}}"></image>
  </view>
    <view>
    <button type="default" bindtap="gotoShow" >点击上传照片</button> 
  </view>

 <view class="page-section">
    <view class="weui-cells__title">名称</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" maxlength="10" placeholder="输入商品名称" />
      </view>
    </view>
  </view>
 <view class="page-section">
    <view class="weui-cells__title">价格</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" type="number" placeholder="请输入价格" />
      </view>
    </view>
  </view>
  <view class="page-section">
    <view class="weui-cells__title">物品详细信息</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" auto-focus placeholder="输入信息"/>
      </view>
    </view>
  </view>

</view>